{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "preserveSymlinks": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "dist"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "test",
    "dist"
  ]
}
